<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/global_padding"
		android:paddingRight="@dimen/global_padding"
		android:paddingTop="8dp"
		android:paddingBottom="8dp" android:weightSum="1">

	<com.github.ivbaranov.mli.MaterialLetterIcon
			android:id="@+id/series_letter_image"
			android:layout_width="@dimen/thumbnail_size"
			android:layout_height="@dimen/thumbnail_size"
			android:layout_gravity="center_vertical"/>

	<TextView
			android:id="@+id/series_text"
			android:maxLines="1"
			android:textSize="18sp"
			android:layout_marginStart="@dimen/global_padding"
			android:layout_gravity="center_vertical"
			android:layout_width="180dp"
			android:layout_height="wrap_content" android:layout_weight="0.50"/>
	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/delete"
			android:id="@+id/series_delete_button"/>
</LinearLayout>