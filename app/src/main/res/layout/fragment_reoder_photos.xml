<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  tools:context=".rearrange.RearrangementActivity">

	<LinearLayout android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:orientation="horizontal">

		<Button android:id="@+id/btn_cancelReordering"
				style="?android:attr/borderlessButtonStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/finishReordering"/>

		<Button android:id="@+id/btn_finishReordering"
				style="?android:attr/borderlessButtonStyle"
				android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/finishReordering"/>

	</LinearLayout>

	<fragment
			class="cz.cvut.fjfi.pvs.pvs2016.rearrange.RecyclerGridFragment"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>


</LinearLayout>