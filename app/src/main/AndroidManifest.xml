<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="cz.cvut.fjfi.pvs.pvs2016">

	<!-- Permissions -->
	<uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.INTERNET"/>

	<!-- Camera's features -->
	<uses-feature
			android:name="android.permission.camera"
			android:required="true"/>
	<uses-feature android:name="android.hardware.camera.flash"/>
	<uses-feature android:name="android.hardware.camera.autofocus"/>

	<application
			android:allowBackup="true"
			android:icon="@mipmap/app_icon"
			android:label="@string/app_name"
			android:supportsRtl="true"
			android:theme="@style/AppTheme">
		<activity android:name=".MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
				android:name=".SettingsActivity"
				android:label="@string/toolbar_settings"/>
		<activity
				android:name=".camera.CameraActivity"
				android:label="@string/app_name"
				android:theme="@style/NoActionBar"/>
		<activity android:name=".camera.PreviewActivity"/>
		<activity android:name=".camera.CompleteSessionActivity"/>
		<activity android:name=".rearrange.RearrangementActivity"/>
	</application>

</manifest>